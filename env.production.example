# ============================================================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN - API NAXINE
# ============================================================================

# Configuración del servidor
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Configuración de base de datos
# Para SQLite (desarrollo/testing)
DB_DIALECT=sqlite
DB_STORAGE=./data/database.sqlite

# Para PostgreSQL (producción recomendada)
# DB_DIALECT=postgres
# DB_HOST=db
# DB_PORT=5432
# DB_NAME=naxine_prod
# DB_USER=naxine_user
# DB_PASS=naxine_password

# Configuración JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
TOKEN_CONFIRMATION_SECRET=your-token-confirmation-secret-change-this-2024

# Configuración de email (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Configuración de CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Configuración de sesiones
SESSION_SECRET=your-session-secret-change-this-in-production-2024

# Configuración de seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
