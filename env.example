# Archivo de configuración de ejemplo para Naxine
# Copia este archivo como .env y reemplaza los valores con tus credenciales reales

# Configuración del servidor
NODE_ENV=production
PORT=3000

# JWT Secrets (genera claves seguras para producción)
JWT_SECRET=tu_clave_secreta_super_segura_cambiar_en_produccion
TOKEN_CONFIRMATION_SECRET=token_confirm_secret_cambiar_en_produccion
SESSION_SECRET=tu_session_secret_cambiar_en_produccion

# Configuración de la base de datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=naxine
DB_USER=usuario
DB_PASS=contraseña

# Email Configuration
EMAIL_USER=tu_correo@gmail.com
EMAIL_PASS=tu_contraseña_de_app

# Frontend URL
FRONTEND_URL=https://naxine.com